---
apiVersion: v1
kind: Namespace
metadata:
  name: gluster
  labels:
    name: gluster
---
apiVersion: v1
kind: Service
metadata:
  name: glusterfs-cluster 
  namespace: gluster
spec:
  ports:
  - port: 24010
---
apiVersion: v1
kind: Endpoints
metadata:
  name: glusterfs-cluster 
  namespace: gluster
subsets:
{% for gluster_node in groups['storage'] %}
  - addresses:
      - ip: {{ gluster_node }}
    ports:
      - port: 1 
{% endfor %}
